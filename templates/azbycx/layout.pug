doctype html
html
	head
		title Swaaypay
		meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1")
		link(rel='shortcut icon' href='')
		
		//- link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
		//- script(src='/bower_components/jquery/dist/jquery.js')
		//- script(src='/bower_components/bootstrap/dist/js/bootstrap.js')

		script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
		link(rel='stylesheet' href='../css/style.css')
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
		
		style.
			.navbar{
				position: fixed;
				width: 100%;
				z-index: 1;
				top: 0px;
			}
			.navbar.navbar-inverse{
				border-radius: 0px;
			}
			.navbar:after{
				content: '';
				clear: both;
				display: block;

			}
			.container:before{
				content: '';
				clear: both;
				display: block;
			}
			
			.container{
				margin-top: 70px;
				min-height: 60vh;
			}

			footer{
				//- position: relative;
				width: 100vw;
				height: 70px;
				text-align: center;
				padding-top: 10px;
				background-color: #222;
				color: white;
				margin-top: 20px;
			}
			button{
				border-radius: none;
			}

	body
		nav.navbar.navbar-inverse.fixed
			.container-fluid
				.navbar-header
					button.navbar-toggle(type='button' data-toggle="collapse" data-target="#example-navbar-collapse")
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') Swaaypay
				#example-navbar-collapse.collapse.navbar-collapse.collapse
					ul.nav.navbar-nav
						if user
							li.dropdown
								a(href="#" data-toggle="dropdown" class='dropdown-toggle') Navigation
									b.caret
								ul.dropdown-menu
									li
										a(href="/medusa123/dashboard")
											span.glyphicon.glyphicon-home  Dashboard
									li
										a(href="/medusa123/reservation")
											span.glyphicon.glyphicon-list  Reservation List
									li
										a(href="/medusa123/profile")
											span.glyphicon.glyphicon-edit  Profile
									li
										a(href="/medusa123/transactions")
											span.glyphicon.glyphicon-transfer  Transactions
									li
										a(href="/medusa123/admins")
											span.glyphicon.glyphicon-king  Admins
									li
										a(href="/medusa123/users")
											span.glyphicon.glyphicon-user  Users
									li
										a(href="/medusa123/complaints")
											span.glyphicon.glyphicon-inbox  Complaints
									li
										a(href="/medusa123/declined-transactions")
											span.glyphicon.glyphicon-remove  Declined Transactions
									li
										a(href="/medusa123/purge")
											span.glyphicon.glyphicon-remove  Purge Defaulters
									li
										a(href="/medusa123/purged-accounts")
											span.glyphicon.glyphicon-off  Purged Accounts

					ul.nav.navbar-nav.navbar-right
						if user
							li 
								a(href='/medusa123/profile')
									span.glyphicon.glyphicon-user #{user.username}
							li 
								a(href='/medusa123/logout')
									span.glyphicon.glyphicon-log-out Logout
		.container
			!=messages('message', locals)
			if errors
				each error,  i in errors
					p#err #{error.msg}

			block content
			br
		hr

		footer
			p copyright &copy; 2017
			i(style='float: right') designed by encrybit01@gmail.com