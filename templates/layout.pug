html
	head
		title Swaaypay
		meta(name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1")
		link(rel='shortcut icon' href='')

		//- link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
