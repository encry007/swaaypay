		script(src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
		link(rel='stylesheet' href='../css/style.css')
		script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")

		style.
			html, body{ position: relative}
			.navbar{
				position: fixed;
				width: 100%;
				z-index: 1;
				top: 0px;
			}

			.navbar.navbar-inverse{
				border-radius: 0px;
			}
			.navbar:after{
				content: '';
				clear: both;
				display: block;

			}
			
			.container{
				margin-top: 70px;
				margin-bottom: 50px;
				position: relative;
				display: block;
				min-height: 80vh;
			}


			.container:before{
				content: '';
				display: block;
				clear: both;
			}

			footer{
				text-align: center;
				height: 50px;
				padding-top: 10px;
				background-color: #222;
				color: white;
				margin-top: 20px;
				width: 100vw;
				height: 70px;
			}

			button{
				border-radius: 0px !important;
			}
			
	body
		nav.navbar.navbar-inverse.fixed
			.container-fluid
				.navbar-header
					button.navbar-toggle.collapsed(type='button' data-toggle="collapse" data-target="#example-navbar-collapse" aria-expanded="")
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') Swaaypay
				#example-navbar-collapse.collapse.navbar-collapse.collapse
					ul.nav.navbar-nav
							if user
								li.dropdown
									a(href="#" data-toggle="dropdown" class='dropdown-toggle') Navigation
										b.caret
									ul.dropdown-menu
										li
											a(href="/users/dashboard")
												span.glyphicon.glyphicon-home  Dashboard
										li
											a(href="/users/reservation")
												span.glyphicon.glyphicon-list  Reservation List
										li
											a(href="/users/profile")
												span.glyphicon.glyphicon-edit  Profile
										li
											a(href="/users/payment")
												span.glyphicon.glyphicon-gbp  Outstanding Payment
										li
											a(href="/users/transactions")
												span.glyphicon.glyphicon-transfer  Transactions
										li
											a(href="/users/inbox")
												span.glyphicon.glyphicon-transfer  Inbox
										li
											a(href="/users/support")
												span.glyphicon.glyphicon-envelope  Support
												
					ul.nav.navbar-nav.navbar-right
						if user
							li 
								a(href='/users/profile')
									span.glyphicon.glyphicon-user #{user.username}
							li
								a(href='/users/logout')
									span.glyphicon.glyphicon-log-out Logout
		.container#main
			!= messages('message', locals)
			if errors
				each error,  i in errors
					div(class='alert alert-danger') #{error.msg}

			block content
			br
		hr

	footer
